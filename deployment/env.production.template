# Frameio Production Environment Variables Template
# Copy this to /opt/frameio/.env on your EC2 server
# IP Address: 13.213.53.199

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your_django_secret_key_here
DEBUG=False
ALLOWED_HOSTS=13.213.53.199,localhost,127.0.0.1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MySQL Database Configuration
DB_NAME=frameio_db
DB_USER=frameio_user
DB_PASSWORD=your_secure_mysql_password_here
DB_HOST=localhost
DB_PORT=3306

# =============================================================================
# CLERK AUTHENTICATION
# =============================================================================
# Get these from your Clerk dashboard: https://dashboard.clerk.com
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here
NEXT_PUBLIC_CLERK_FRONTEND_API=your_clerk_frontend_api_url_here

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================
# Google Gemini 2.5 Flash API (for AI poster and caption generation)
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL_NAME=gemini-2.5-flash-image

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================
# Arcjet for rate limiting and security
# Get your key from: https://arcjet.com/
ARCJET_KEY=your_arcjet_key_here

# =============================================================================
# PRODUCTION SECURITY SETTINGS
# =============================================================================
# SSL/HTTPS Settings (set to True when SSL is configured)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# CORS Configuration for Production
CORS_ALLOWED_ORIGINS=http://13.213.53.199,https://13.213.53.199
# Add your domain when available:
# CORS_ALLOWED_ORIGINS=http://13.213.53.199,https://13.213.53.199,https://yourdomain.com

# =============================================================================
# BILLING & PAYMENTS
# =============================================================================
# Stripe for billing and payments
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# =============================================================================
# CACHING & REDIS
# =============================================================================
# Redis for caching and background tasks
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Next.js Frontend Configuration
# Update with your actual frontend URL
NEXT_PUBLIC_API_URL=http://13.213.53.199/api
NEXT_PUBLIC_APP_URL=http://13.213.53.199
# When using domain:
# NEXT_PUBLIC_API_URL=https://yourdomain.com/api
# NEXT_PUBLIC_APP_URL=https://yourdomain.com

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email settings for notifications and invitations
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password_here

# =============================================================================
# FILE STORAGE
# =============================================================================
# AWS S3 Configuration (for production file storage - optional)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_STORAGE_BUCKET_NAME=frameio-storage
AWS_S3_REGION_NAME=us-east-1

# =============================================================================
# CLOUDINARY IMAGE HOSTING
# =============================================================================
# Cloudinary for public image hosting and sharing
# Get your credentials from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here
USE_CLOUDINARY=True

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
# Set your domain URL when available
DOMAIN_URL=http://13.213.53.199
# When using domain:
# DOMAIN_URL=https://yourdomain.com

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry for error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# Google Analytics Data API (GA4) Configuration
GOOGLE_ANALYTICS_PROPERTY_ID=your_ga4_property_id_here
GOOGLE_ANALYTICS_CREDENTIALS_JSON={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}

# =============================================================================
# NOTES
# =============================================================================
# 1. Replace all 'your_*_key_here' values with actual API keys
# 2. Set DEBUG=False for production
# 3. Update ALLOWED_HOSTS with your IP and domain
# 4. Set SECURE_SSL_REDIRECT=True when SSL is configured
# 5. Never commit real API keys to version control
# 6. Use strong passwords for database
# 7. Restrict database user permissions in production

