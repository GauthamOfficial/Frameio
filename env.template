# Frameio AI-Powered Textile Design Platform - Environment Variables Template
# Copy this file to .env and update the values as needed

# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your_django_secret_key_here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database (Production)
DB_NAME=frameio_db
DB_USER=postgres
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=5432

# Alternative: SQLite for development (uncomment to use SQLite)
# DATABASE_URL=sqlite:///db.sqlite3

# =============================================================================
# CLERK AUTHENTICATION
# =============================================================================
# Get these from your Clerk dashboard: https://dashboard.clerk.com
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here
CLERK_SECRET_KEY=your_clerk_secret_key_here
NEXT_PUBLIC_CLERK_FRONTEND_API=your_clerk_frontend_api_url_here

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================
# Google Gemini 2.5 Flash API (for AI poster and caption generation)
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL_NAME=gemini-2.5-flash-image

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================
# Arcjet for rate limiting and security
# Get your key from: https://arcjet.com/
ARCJET_KEY=your_arcjet_key_here

# =============================================================================
# BILLING & PAYMENTS
# =============================================================================
# Stripe for billing and payments
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# =============================================================================
# CACHING & REDIS
# =============================================================================
# Redis for caching and background tasks
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Next.js Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000/api
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Email settings for notifications and invitations
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password_here

# =============================================================================
# FILE STORAGE
# =============================================================================
# AWS S3 Configuration (for production file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_STORAGE_BUCKET_NAME=frameio-storage
AWS_S3_REGION_NAME=us-east-1

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry for error tracking (optional)
SENTRY_DSN=your_sentry_dsn_here

# Google Analytics (optional)
GOOGLE_ANALYTICS_ID=your_ga_id_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to False in production
DEBUG=True
DEVELOPMENT_MODE=True

# =============================================================================
# PRODUCTION SETTINGS (uncomment for production)
# =============================================================================
# DEBUG=False
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# =============================================================================
# NOTES
# =============================================================================
# 1. Replace all 'your_*_key_here' values with actual API keys
# 2. For development, you can use the default values provided
# 3. Never commit real API keys to version control
# 4. Use different keys for development, staging, and production
# 5. Consider using a secrets management service for production
